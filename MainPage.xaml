<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XAMLMarkup.MainPage">

    <VerticalStackLayout MinimumWidthRequest="600" Background="{OnPlatform WinUI=LightGray, Android=Green, iOS=Silver, Default=White}">
        <VerticalStackLayout.Padding>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="Android" Value="0"/>
                <On Platform="WinUI" Value="60"/>
            </OnPlatform>
        </VerticalStackLayout.Padding>
        <Label Text="Notes" Margin="20" HorizontalOptions="Center" FontAttributes="Bold" FontSize="42"></Label>
        <Editor x:Name="editor" Background="White" AutoSize="TextChanges"></Editor>
        <Grid Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="SaveButton" Grid.Column="0" Text="Save" Clicked="OnSaveButtonClicked"></Button>
            <Button x:Name="DeleteButton" Grid.Column="2" Text="Delete" Clicked="OnDeleteButtonClicked"></Button>
        </Grid>
    </VerticalStackLayout>
    
</ContentPage>
